<%- include('../partials/head') %>
<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Souq Wishlist</title>
</head>
<body>
 
<div class="container mt-4">
  <h1 class="text-center mb-4">Souq Wishlists</h1>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% foundListings.forEach((listing) => { %>
      <div class="col">
        <div class="card h-100">
          <img src="<%= listing.image %>" class="card-img-top" alt="Image of <%= listing.title %>">
          <div class="card-body">
            <h5 class="card-title"><%= listing.name %></h5>
            <p class="card-text"><%= listing.description %></p>
            <p class="card-text"><strong><%= listing.price %> BHD</strong></p>
            <!-- Button to view listing will be broken until next section -->
            <a href="/listings/<%= listing._id %>" class="btn btn-primary">View Product</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

</body>
</html>